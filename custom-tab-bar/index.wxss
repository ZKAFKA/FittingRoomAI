.tab-bar {
  position: fixed;
  bottom: calc(24rpx + env(safe-area-inset-bottom));
  left: 50%;
  transform: translateX(-50%);
  width: calc(100% - 48rpx);
  max-width: 900rpx;
  min-width: 600rpx;
  height: 150rpx;
  background: linear-gradient(135deg, rgba(15, 15, 18, 0.7) 0%, rgba(15, 15, 18, 0.85) 100%);
  backdrop-filter: blur(40rpx);
  display: flex;
  align-items: center;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.4),
    0 0 40rpx rgba(123, 97, 255, 0.15);
  padding-bottom: 0;
  z-index: 1000;
  border-radius: 50rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.08);
  position: relative;
  overflow: visible;
}

.tab-bar::before {
  content: '';
  position: absolute;
  top: 0;
  left: 20rpx;
  right: 20rpx;
  height: 1rpx;
  background: linear-gradient(90deg, 
    transparent 0%, 
    rgba(123, 97, 255, 0.3) 20%, 
    rgba(123, 97, 255, 0.8) 50%, 
    rgba(123, 97, 255, 0.3) 80%, 
    transparent 100%);
  animation: breathing 2s ease-in-out infinite;
  z-index: 1;
}

@keyframes breathing {
  0%, 100% {
    opacity: 0.4;
    box-shadow: 0 0 10rpx rgba(123, 97, 255, 0.3);
  }
  50% {
    opacity: 1;
    box-shadow: 0 0 20rpx rgba(123, 97, 255, 0.6);
  }
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  min-width: 0;
  padding-bottom: 0;
}

.tab-item.center {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  min-width: 0;
}

.tab-icon {
  width: 48rpx;
  height: 48rpx;
}

.tab-text {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-top: 10rpx;
  font-family: 'PingFang SC', 'Helvetica Neue', sans-serif;
  transition: all 0.3s ease;
}

.tab-text.active {
  color: #7B61FF;
  text-shadow: 0 0 10rpx rgba(123, 97, 255, 0.5);
}

.center-btn {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #7B61FF 0%, #9A80FF 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: -20rpx 0;
  box-shadow: 
    0 8rpx 24rpx rgba(123, 97, 255, 0.5),
    0 0 40rpx rgba(123, 97, 255, 0.4),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.2);
  transition: all 0.4s ease-in-out;
  position: relative;
  overflow: hidden;
  flex-shrink: 0;
  will-change: transform, width, height, border-radius, margin;
}

.center-btn.tryon-mode {
  width: 200rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin: 0;
  flex-direction: row;
  justify-content: center;
  gap: 0;
  box-shadow: 
    0 8rpx 24rpx rgba(123, 97, 255, 0.6),
    0 0 50rpx rgba(123, 97, 255, 0.5),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.2);
  transition: all 0.4s ease-in-out;
  will-change: transform, width, height, border-radius, margin;
}

.center-btn::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transform: rotate(45deg);
  animation: neon-shine 2s infinite;
}

@keyframes neon-shine {
  0% { transform: translateX(-100%) rotate(45deg); }
  100% { transform: translateX(100%) rotate(45deg); }
}

.center-btn:active {
  box-shadow: 
    0 4rpx 16rpx rgba(123, 97, 255, 0.7),
    0 0 50rpx rgba(123, 97, 255, 0.9),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.2);
}

.center-btn.tryon-mode:active {
  transform: scale(0.97);
  background: linear-gradient(135deg, #6B51EF 0%, #8A70EF 100%);
  box-shadow: 
    0 4rpx 16rpx rgba(123, 97, 255, 0.7),
    0 0 50rpx rgba(123, 97, 255, 0.9),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.2);
  transition: all 0.15s ease;
}

.center-icon {
  width: 56rpx;
  height: 56rpx;
  transition: all 0.4s ease-in-out;
  will-change: transform, width, height, opacity;
}

.center-btn.tryon-mode .center-icon {
  width: 40rpx;
  height: 40rpx;
  transition: all 0.4s ease-in-out;
  will-change: transform, width, height, opacity;
}

.tryon-text {
  font-size: 28rpx;
  color: white;
  font-weight: 600;
  letter-spacing: 1rpx;
  white-space: nowrap;
  transition: all 0.4s ease-in-out;
  will-change: transform, opacity;
}
