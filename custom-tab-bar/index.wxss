.tab-bar {
  position: fixed;
  bottom: calc(24rpx + env(safe-area-inset-bottom));
  left: 50%;
  transform: translateX(-50%);
  width: calc(100% - 48rpx);
  max-width: 900rpx;
  min-width: 600rpx;
  height: 150rpx;
  background: linear-gradient(135deg, rgba(15, 15, 18, 0.7) 0%, rgba(15, 15, 18, 0.85) 100%);
  backdrop-filter: blur(40rpx);
  display: flex;
  align-items: center;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.4),
    0 0 40rpx rgba(123, 97, 255, 0.15);
  padding-bottom: 0;
  z-index: 1000;
  border-radius: 50rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.08);
  position: relative;
  overflow: visible;
}

.tab-bar::before {
  content: '';
  position: absolute;
  top: 0;
  left: 20rpx;
  right: 20rpx;
  height: 1rpx;
  background: linear-gradient(90deg, 
    transparent 0%, 
    rgba(123, 97, 255, 0.3) 20%, 
    rgba(123, 97, 255, 0.8) 50%, 
    rgba(123, 97, 255, 0.3) 80%, 
    transparent 100%);
  animation: breathing 2s ease-in-out infinite;
  z-index: 1;
}

@keyframes breathing {
  0%, 100% {
    opacity: 0.4;
    box-shadow: 0 0 10rpx rgba(123, 97, 255, 0.3);
  }
  50% {
    opacity: 1;
    box-shadow: 0 0 20rpx rgba(123, 97, 255, 0.6);
  }
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  min-width: 0;
  padding-bottom: 0;
}

.tab-icon {
  width: 48rpx;
  height: 48rpx;
}

.tab-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #bfbfbf;
  margin-top: 10rpx;
  font-family: 'PingFang SC', 'Helvetica Neue', sans-serif;
  transition: all 0.3s ease;
}

.tab-text.active {
  color: #8c52ff;
  text-shadow: 0 0 10rpx rgba(123, 97, 255, 0.5);
}

/* 分割线样式 */
.tab-divider {
  width: 1rpx;
  height: 80rpx;
  background: linear-gradient(to bottom, 
    transparent 0%, 
    rgba(255, 255, 255, 0.15) 20%, 
    rgba(255, 255, 255, 0.25) 50%, 
    rgba(255, 255, 255, 0.15) 80%, 
    transparent 100%);
  margin: 0 20rpx;
  position: relative;
  z-index: 1;
}
