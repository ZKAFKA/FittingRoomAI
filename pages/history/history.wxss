/* 页面基础样式 */
.page {
  min-height: 100vh;
  background: #0f0a1e;
  padding-bottom: 200rpx;
}

/* 头部 */
.header {
  position: sticky;
  top: 0;
  z-index: 50;
  background: rgba(15, 10, 30, 0.9);
  backdrop-filter: blur(20px);
  padding: 32rpx 32rpx 0rpx 32rpx;
  overflow: hidden;
}

.header-content {
  position: relative;
  z-index: 1;
}

.header-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

/* 呼吸光特效 */
.header-glow {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, #8b5cf6, transparent);
  animation: headerGlow 2s ease-in-out infinite;
}

@keyframes headerGlow {
  0%, 100% {
    opacity: 0.3;
    transform: scaleX(0.5);
    transform-origin: center;
  }
  50% {
    opacity: 1;
    transform: scaleX(1);
    transform-origin: center;
  }
}

.page-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #ffffff;
  letter-spacing: 1rpx;
}

.header-right {
  display: flex;
  gap: 8rpx;
}

.header-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: background 0.2s;
}

.header-btn:active {
  background: rgba(255, 255, 255, 0.1);
}

.btn-icon {
  width: 36rpx;
  height: 36rpx;
}



.search-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 16rpx;
  opacity: 0.5;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #ffffff;
  height: 100%;
}

.search-placeholder {
  color: rgba(255, 255, 255, 0.3);
}

.search-clear {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.5);
  padding: 8rpx;
}

/* 搜索栏和按钮行 */
.search-bar-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 32rpx;
  margin-bottom: 32rpx;
  flex-wrap: nowrap;
}

/* 搜索栏 */
.search-bar {
  flex: 1;
  min-width: 0;
  max-height: 80rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

.search-input-wrap {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  padding: 0 24rpx;
  height: 80rpx;
  width: 88%;
}

/* 按钮组 */
.button-group {
  display: flex;
  gap: 16rpx;
  flex-shrink: 0;
}

.filter-btn, .favorate-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 12rpx;
  background: rgba(255, 255, 255, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  backdrop-filter: blur(10px);
  transition: all 0.25s ease;
  cursor: pointer;
  width: 56rpx;
  height: 56rpx;
  flex-shrink: 0;
}

.filter-btn:active, .favorate-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.1);
}

.favorate-btn.active {
  background: #8b5cf6;
  border-color: #8b5cf6;
  box-shadow: 0 8rpx 24rpx rgba(139, 92, 246, 0.3);
}

.menu-btn-icon {
  width: 45rpx;
  height: 45rpx;
  transition: transform 0.2s ease;
}

.filter-btn:active .menu-btn-icon:last-child {
  transform: rotate(180deg);
}

/* 筛选弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.modal-overlay.show {
  opacity: 1;
  pointer-events: auto;
}


.modal-content {
  position: relative;
  width: 90%;
  max-width: 500rpx;
  max-height: 80vh;
  background: #1a152e;
  border-radius: 32rpx;
  border: 1rpx solid rgba(139, 92, 246, 0.3);
  box-shadow: 0 0 60rpx rgba(139, 92, 246, 0.2);
  overflow: hidden;
  transform: translateY(0) scale(0.95);
  transition: transform 0.3s ease;
}

.modal-overlay.show .modal-content {
  transform: translateY(0) scale(1);
}

.modal-header {
  padding: 48rpx 40rpx 24rpx;
  text-align: center;
}

.modal-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.modal-body {
  padding: 0 40rpx;
  max-height: 50vh;
  overflow-y: auto;
}

.modal-body::-webkit-scrollbar {
  display: none;
}

.filter-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.05);
}

.filter-option:last-child {
  border-bottom: none;
}

.option-text {
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.8);
}

.option-radio {
  width: 28rpx;
  height: 28rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  transition: all 0.2s ease;
}

.option-radio.active {
  border-color: #8b5cf6;
  background: #8b5cf6;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 40rpx 48rpx;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.2s ease;
}

.btn-cancel {
  background: rgba(0, 0, 0, 0.3);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.6);
}

.btn-cancel:active {
  background: rgba(255, 255, 255, 0.1);
  color: #ffffff;
}

.btn-confirm {
  background: #8b5cf6;
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(139, 92, 246, 0.3);
}

.btn-confirm:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 筛选按钮高亮状态 */
.filter-btn.active {
  background: #8b5cf6;
  border-color: #8b5cf6;
  box-shadow: 0 8rpx 24rpx rgba(139, 92, 246, 0.3);
}

/* 服装网格 */
.clothes-grid {
  margin-top: 24rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 0 32rpx;
}

.cloth-card {
  position: relative;
  aspect-ratio: 3/4;
  background: rgba(91, 19, 236, 0.2);
  border-radius: 32rpx;
  overflow: hidden;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
}

.cloth-card:active {
  transform: scale(0.98);
  border-color: rgba(168, 85, 247, 0.5);
}

.cloth-image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  object-fit: cover;
  border-radius: 32rpx;
}

.cloth-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 48rpx 24rpx 24rpx;
  background: linear-gradient(to top, #0f0a1e 0%, rgba(15, 10, 30, 0.6) 60%, transparent 100%);
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.cloth-category {
  font-size: 18rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.5);
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.cloth-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
}

.cloth-delete {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 56rpx;
  height: 56rpx;
  background: rgba(255, 77, 79, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.2s;
}

.cloth-card:active .cloth-delete {
  opacity: 1;
}

.favorite-icon {
  width: 28rpx;
  height: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.3);
}



/* 悬浮按钮 */
.fab-container {
  position: fixed;
  bottom: 120rpx;
  right: 32rpx;
  z-index: 60;
  display: flex;
  align-items: center;
  justify-content: center;
}

.fab-btn {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #8b5cf6, #a78bfa);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(12px);
  box-shadow: 0 0 60rpx 10rpx rgba(139, 92, 246, 0.4),
              inset 0 0 24rpx rgba(255, 255, 255, 0.2);
  transition: transform 0.2s;
}

.fab-btn:active {
  transform: scale(0.9);
}

.fab-glow {
  position: absolute;
  inset: -30rpx;
  border-radius: 50%;
  background: rgba(139, 92, 246, 0.3);
  filter: blur(40rpx);
  z-index: -1;
}

.fab-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 响应式设计 */
@media (min-width: 768px) {
  .clothes-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 24rpx;
  }
  
  .header {
    padding: 32rpx 48rpx 0;
  }
  
  .clothes-grid {
    padding: 0 48rpx;
  }
}

@media (max-width: 375px) {
  .category-scroll {
    gap: 12rpx;
  }
  
  .category-chip {
    font-size: 20rpx;
    padding: 10rpx 24rpx;
  }
  
  .page-title {
    font-size: 36rpx;
  }
}
