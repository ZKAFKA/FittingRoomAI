/* pages/index/index.wxss */

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 20rpx;
}

.user-details {
  flex: 1;
}

.welcome {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  display: block;
}

.stats {
  font-size: 24rpx;
  opacity: 0.9;
}

.quick-actions {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-bottom: 30rpx;
}

.action-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.action-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea, #764ba2);
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.action-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.12);
}

.action-card:hover::before {
  transform: scaleX(1);
}

.action-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
}

.action-text {
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

.count {
  font-size: 24rpx;
  color: #667eea;
  margin-left: 4rpx;
}

.section {
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding: 0 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 24rpx;
  color: #667eea;
}

.tryon-list {
  display: flex;
  gap: 16rpx;
  padding: 10rpx 0;
}

.tryon-item {
  width: 200rpx;
  flex-shrink: 0;
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.3s ease;
}

.tryon-item:hover {
  transform: translateY(-4rpx);
}

.tryon-image {
  width: 100%;
  height: 280rpx;
  object-fit: cover;
}

.tryon-time {
  font-size: 20rpx;
  color: #666;
  padding: 12rpx;
  text-align: center;
}

.inspiration-list {
  display: flex;
  gap: 16rpx;
  padding: 10rpx 0;
}

.inspiration-item {
  width: 180rpx;
  flex-shrink: 0;
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.3s ease;
}

.inspiration-item:hover {
  transform: translateY(-4rpx);
}

.inspiration-image {
  width: 100%;
  height: 240rpx;
  object-fit: cover;
}

.inspiration-title {
  font-size: 20rpx;
  color: #333;
  padding: 12rpx;
  text-align: center;
  line-height: 1.3;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
  font-size: 28rpx;
  color: #666;
}

.error {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 100rpx 20rpx;
  text-align: center;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.error text {
  font-size: 28rpx;
  color: #ff4d4f;
  margin-bottom: 20rpx;
}

.retry-btn {
  background: linear-gradient(90deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 30rpx;
  font-size: 24rpx;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .quick-actions {
    grid-template-columns: 1fr;
  }
  
  .action-card {
    flex-direction: row;
    padding: 20rpx;
  }
  
  .action-icon {
    margin-right: 20rpx;
    margin-bottom: 0;
  }
}

/* 动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.header,
.quick-actions,
.section {
  animation: fadeInUp 0.6s ease-out;
}

.header {
  animation-delay: 0.1s;
}

.quick-actions {
  animation-delay: 0.2s;
}

.section {
  animation-delay: 0.3s;
}