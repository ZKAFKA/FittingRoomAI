/* 页面基础样式 */
.page {
  min-height: 100vh;
  background: linear-gradient(135deg, #0f0c29 0%, #302b63 50%, #24243e 100%);
  display: flex;
  flex-direction: column;
}

/* 加载状态 */
.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #0f0c29 0%, #302b63 50%, #24243e 100%);
  z-index: 1000;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(139, 92, 246, 0.2);
  border-top-color: #8b5cf6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 头部导航 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 32rpx;
  padding-top: calc(40rpx + env(safe-area-inset-top));
  background: rgba(15, 12, 41, 0.8);
  backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.header-back {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.header-back:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.95);
}

.back-icon {
  width: 36rpx;
  height: 36rpx;
  filter: brightness(0) invert(1);
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
  letter-spacing: 2rpx;
}

.header-placeholder {
  width: 72rpx;
}

/* 内容滚动区域 */
.content-scroll {
  flex: 1;
  height: calc(100vh - 160rpx - env(safe-area-inset-top));
}

.content-container {
  padding: 40rpx 32rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

/* 标题区域 */
.title-section {
  text-align: center;
  margin-bottom: 60rpx;
  padding-bottom: 40rpx;
  border-bottom: 2rpx solid rgba(139, 92, 246, 0.3);
}

.main-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 20rpx;
  letter-spacing: 4rpx;
  text-shadow: 0 4rpx 20rpx rgba(139, 92, 246, 0.3);
}

.update-date {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* 章节样式 */
.section {
  margin-bottom: 50rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid rgba(139, 92, 246, 0.2);
}

.section-number {
  font-size: 36rpx;
  font-weight: 700;
  color: #8b5cf6;
  margin-right: 16rpx;
}

.section-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  line-height: 1.4;
}

/* 子章节 */
.subsection {
  margin-bottom: 40rpx;
  padding-left: 20rpx;
}

.subsection-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 20rpx;
  margin-top: 30rpx;
}

/* 段落样式 */
.paragraph {
  display: block;
  font-size: 28rpx;
  line-height: 1.8;
  color: rgba(255, 255, 255, 0.75);
  text-align: justify;
  margin-bottom: 24rpx;
  text-indent: 2em;
}

.paragraph.highlight {
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
  background: rgba(139, 92, 246, 0.1);
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #8b5cf6;
  text-indent: 0;
}

/* 列表样式 */
.list {
  margin: 20rpx 0;
}

.list-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  padding-left: 20rpx;
}

.list-marker {
  font-size: 28rpx;
  color: #8b5cf6;
  margin-right: 16rpx;
  line-height: 1.6;
  flex-shrink: 0;
}

.list-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: rgba(255, 255, 255, 0.75);
  text-align: justify;
  flex: 1;
}

/* 强调文字 */
.bold {
  font-weight: 600;
  color: rgba(255, 255, 255, 0.9);
}

/* 联系信息 */
.contact-info {
  background: rgba(139, 92, 246, 0.1);
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 30rpx 0;
  border: 1rpx solid rgba(139, 92, 246, 0.2);
}

.contact-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.contact-item:last-child {
  margin-bottom: 0;
}

.contact-label {
  font-size: 28rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.9);
  margin-right: 16rpx;
  min-width: 140rpx;
}

.contact-value {
  font-size: 28rpx;
  color: #8b5cf6;
  flex: 1;
}

/* 底部留白 */
.bottom-space {
  height: 60rpx;
}

/* 响应式设计 - 平板 */
@media (min-width: 768px) {
  .content-container {
    padding: 60rpx 80rpx;
    max-width: 800rpx;
    margin: 0 auto;
  }
  
  .main-title {
    font-size: 56rpx;
  }
  
  .section-name {
    font-size: 36rpx;
  }
  
  .paragraph,
  .list-content {
    font-size: 30rpx;
  }
}

/* 响应式设计 - 小屏幕手机 */
@media (max-width: 375px) {
  .content-container {
    padding: 30rpx 24rpx;
  }
  
  .main-title {
    font-size: 40rpx;
  }
  
  .section-name {
    font-size: 28rpx;
  }
  
  .paragraph,
  .list-content {
    font-size: 26rpx;
  }
}
