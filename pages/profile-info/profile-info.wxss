/* 页面基础样式 */
.page {
  min-height: 100vh;
  background: #ffffff;
}

/* 头部区域 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  padding: 0 32rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #e5e5e5;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-left,
.header-right {
  width: 80rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-center {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #000000;
}

.back-icon {
  width: 32rpx;
  height: 32rpx;
  transform: rotate(180deg);
  opacity: 0.8;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  object-fit: cover;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.5;
}

/* 信息列表 */
.info-list {
  margin-top: 0rpx;
  background: #ffffff;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
}

/* 信息项 */
.info-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 32rpx;
  color: #333333;
}

.info-value {
  display: flex;
  align-items: center;
  flex: 1;
  width: 100rpx;
  justify-content: flex-end;
}

.info-input {
  font-size: 32rpx;
  color: #333333;
  text-align: right;
  border: none;
  background: transparent;
  padding: 0;
  margin: 0;
  flex: 1;
  transition: all 0.3s ease;
}

/* 编辑模式样式 */
.info-input.edit-mode {
  border: 2rpx solid #07C160;
  border-radius: 8rpx;
  background-color: #ffffff;
  padding: 12rpx 16rpx;
  box-shadow: 0 0 0 2rpx rgba(7, 193, 96, 0.1);
  transition: all 0.3s ease;
  animation: input-focus 0.3s ease;
  text-align: right;
  max-width: 100rpx;
  z-index: 10;
  position: relative;
  cursor: text;
}

/* 输入框聚焦动画 */
@keyframes input-focus {
  0% {
    transform: scale(1);
    box-shadow: 0 0 0 2rpx rgba(7, 193, 96, 0.1);
  }
  50% {
    transform: scale(1.02);
    box-shadow: 0 0 0 4rpx rgba(7, 193, 96, 0.2);
  }
  100% {
    transform: scale(1);
    box-shadow: 0 0 0 2rpx rgba(7, 193, 96, 0.1);
  }
}

/* 展示状态文本样式 - 增强点击效果 */
.display-text {
  font-size: 32rpx;
  color: #333333;
  text-align: right;
  flex: 1;
  padding: 12rpx 0;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
}

