/* 页面基础样式 */
.page {
  min-height: 100vh;
  background: #0f0a1e;
  padding: 32rpx 0;
}

/* 部分样式 */
.section {
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 20rpx;
  font-weight: 600;
  color: #8b5cf6;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  margin-left: 32rpx;
  margin-bottom: 16rpx;
}

/* 选项组样式 */
.option-group {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 24rpx;
  margin: 0 32rpx;
  overflow: hidden;
}

/* 选项项样式 */
.option-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.05);
  transition: background 0.2s ease;
}

.option-item:last-child {
  border-bottom: none;
}

.option-item:active {
  background: rgba(255, 255, 255, 0.03);
}

/* 选项图标 */
.option-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
  opacity: 0.8;
}

/* 选项内容 */
.option-content {
  flex: 1;
  min-width: 0;
}

.option-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #ffffff;
  margin-bottom: 4rpx;
}

.option-desc {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* 选项箭头 */
.option-arrow {
  width: 20rpx;
  height: 20rpx;
  opacity: 0.5;
  margin-left: 16rpx;
}

/* 选项开关 */
.option-switch {
  transform: scale(0.8);
}

/* 选项值 */
.option-value {
  display: flex;
  align-items: center;
  color: rgba(255, 255, 255, 0.5);
  font-size: 24rpx;
}

/* 自定义开关样式 */
/* 由于微信小程序的 switch 组件样式有限制，这里只做基本调整 */

/* 响应式设计 */
@media (max-width: 375px) {
  .section-title {
    font-size: 18rpx;
  }
  
  .option-title {
    font-size: 24rpx;
  }
  
  .option-desc {
    font-size: 18rpx;
  }
  
  .option-icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
  }
  
  .option-item {
    padding: 20rpx 24rpx;
  }
}

@media (min-width: 768px) {
  .page {
    padding: 48rpx 0;
  }
  
  .section {
    margin-bottom: 64rpx;
  }
  
  .option-group {
    margin: 0 48rpx;
  }
  
  .option-item {
    padding: 28rpx 36rpx;
  }
}

/* 语言选择弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(10rpx);
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.modal-overlay.show {
  opacity: 1;
  pointer-events: auto;
}

.modal-content {
  position: relative;
  width: 80%;
  max-width: 500rpx;
  background: #1a152e;
  border-radius: 32rpx;
  border: 1rpx solid rgba(139, 92, 246, 0.3);
  box-shadow: 0 0 60rpx rgba(139, 92, 246, 0.2);
  overflow: hidden;
  transform: translateY(50rpx) scale(0.95);
  transition: transform 0.3s ease;
}

.modal-overlay.show .modal-content {
  transform: translateY(0) scale(1);
}

.modal-header {
  padding: 48rpx 40rpx 24rpx;
  text-align: center;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.05);
}

.modal-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.modal-body {
  padding: 0 40rpx;
  max-height: 50vh;
  overflow-y: auto;
}

.modal-body::-webkit-scrollbar {
  display: none;
}

.language-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.05);
  transition: background 0.2s ease;
}

.language-option:last-child {
  border-bottom: none;
}

.language-option:active {
  background: rgba(255, 255, 255, 0.03);
}

.option-text {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.8);
}

.option-radio {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.option-radio.active {
  border-color: #8b5cf6;
  background: #8b5cf6;
}

.option-radio.active::after {
  content: '';
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #ffffff;
}

.modal-footer {
  display: flex;
  padding: 24rpx 40rpx 48rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.05);
}

.btn-cancel {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.2s ease;
  background: rgba(0, 0, 0, 0.3);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.6);
}

.btn-cancel:active {
  background: rgba(255, 255, 255, 0.1);
  color: #ffffff;
}

