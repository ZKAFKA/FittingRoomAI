/* pages/tryon/tryon.wxss */

/* 颜色变量 */
:root {
  --primary: #5b13ec;
  --background-light: #f6f6f8;
  --background-dark: #0a021a;
  --navy-purple: #161022;
  --glass: rgba(255, 255, 255, 0.05);
}

.container {
  min-height: 100vh;
  background: #161022;
  padding: 20rpx;
  padding-bottom: 120rpx;
  box-sizing: border-box;
  font-family: 'Manrope', sans-serif;
}

/* 玻璃卡片效果 */
.glass-card {
  background: rgba(255, 255, 255, 0.03);
  backdrop-filter: blur(12px);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

/* 主色调发光效果 */
.primary-glow {
  box-shadow: 0 0 20px rgba(91, 19, 236, 0.4);
}

/* 活动标签阴影效果 */
.active-tab-shadow {
  box-shadow: 0 4px 12px rgba(91, 19, 236, 0.3);
}

/* 上传区域 */
.upload-section {
  position: relative;
}

.upload-area {
  width:85%;
  aspect-ratio: 3/4;
  border-radius: 12rpx;
  margin-top: 24rpx;
  margin-left: auto;
  margin-right: auto;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.upload-area:active {
  transform: none;
  box-shadow: none;
}

.upload-area:hover {
  box-shadow: none;
}

/* 用户上传的图片 */
.user-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
  position: relative;
  z-index: 10;
  object-position: center;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  position: relative;
  z-index: 10;
}

.upload-icon-container {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  cursor: pointer;
  overflow: hidden;
  border: 3rpx solid rgba(123, 97, 255, 0.3);
}

.upload-icon-container::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, #5b13ec 0%, rgba(123, 97, 255, 0) 70%);
  animation: pulse-glow 2s ease-in-out infinite;
  z-index: 0;
}

.upload-icon-container:active {
  transform: scale(0.95);
  box-shadow: 0 0 35rpx rgba(123, 97, 255, 0.7);
  border-color: rgba(123, 97, 255, 0.8);
}

.upload-icon-container:hover {
  box-shadow: 0 0 30rpx rgba(123, 97, 255, 0.6);
  border-color: rgba(123, 97, 255, 0.6);
  transform: translateY(-2rpx);
}

.bg-blue-900 {
  background: linear-gradient(135deg, var(--primary) 0%, #7B61FF 100%);
}

.upload-icon {
  width: 108rpx;
  height: 108rpx;
  position: relative;
  z-index: 1;
  transition: all 0.3s ease;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.2));
}

.upload-icon-container:active .upload-icon {
  transform: scale(0.9);
}

@keyframes pulse-glow {
  0%, 100% {
    opacity: 0.6;
    transform: scale(1);
  }
  50% {
    opacity: 1;
    transform: scale(1.1);
  }
}

.upload-text-container {
  text-align: center;
  margin-bottom: 32rpx;
}

.upload-hint {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  padding: 0 64rpx;
}

.upload-btn:active {
  transform: scale(1.05);
}

.upload-glow {
  position: absolute;
  -z-index: -1;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 640rpx;
  height: 640rpx;
  background: rgba(91, 19, 236, 0.2);
  border-radius: 50%;
  filter: blur(80px);
}

/* 背景图片容器 */
.upload-background {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 背景图片 */
.background-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* 背景图片叠加层 */
.background-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(16, 12, 36, 0.8) 0%, rgba(22, 16, 34, 0.7) 100%);
  z-index: 1;
}

/* 上传提示 */
.upload-prompt {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 2;
  padding: 60rpx;
  text-align: center;
}

/* 相机图标容器 */
.camera-icon-container {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: rgba(123, 97, 255, 0.2);
  backdrop-filter: blur(10px);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  border: 2rpx solid rgba(123, 97, 255, 0.4);
  box-shadow: 0 0 30rpx rgba(123, 97, 255, 0.3);
}

/* 相机图标 */
.camera-icon {
  width: 70rpx;
  height: 70rpx;
  object-fit: contain;
}

/* 上传标题 */
.upload-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* 上传副标题 */
.upload-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 50rpx;
  line-height: 1.4;
}

/* 背景图片加载状态 */
.background-loading {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(16, 12, 36, 0.9);
  z-index: 3;
}

/* 背景图片加载动画 */
.background-loading .loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.1);
  border-left-color: #7B61FF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

.background-loading .loading-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 响应式设计 */
@media (max-width: 375px) {
  .upload-area {
    width: 90%;
  }
  
  .upload-prompt {
    padding: 40rpx;
  }
  
  .camera-icon-container {
    width: 120rpx;
    height: 120rpx;
    margin-bottom: 30rpx;
  }
  
  .camera-icon {
    width: 60rpx;
    height: 60rpx;
  }
  
  .upload-title {
    font-size: 32rpx;
  }
  
  .upload-subtitle {
    font-size: 22rpx;
    margin-bottom: 40rpx;
  }
  
  .upload-button {
    width: 200rpx;
    height: 64rpx;
    font-size: 26rpx;
  }
}

@media (min-width: 768px) {
  .upload-area {
    width: 80%;
    max-width: 600rpx;
  }
  
  .upload-prompt {
    padding: 80rpx;
  }
  
  .camera-icon-container {
    width: 160rpx;
    height: 160rpx;
    margin-bottom: 50rpx;
  }
  
  .camera-icon {
    width: 80rpx;
    height: 80rpx;
  }
  
  .upload-title {
    font-size: 40rpx;
  }
  
  .upload-subtitle {
    font-size: 28rpx;
    margin-bottom: 60rpx;
  }
  
  .upload-button {
    width: 280rpx;
    height: 80rpx;
    font-size: 32rpx;
  }
}

/* 分类区域 */
.cloth-section {
  margin-bottom: 20rpx;
}



/* 分类导航 */
.category-nav {
  height: 120rpx;
  padding: 0 16rpx;
  margin-bottom: 2rpx;
  background: rgba(15, 15, 18, 0.85);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: 0;
  overflow-x: auto;
  overflow-y: hidden;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none;
  position: sticky;
  top: 0;
  z-index: 100;
  width: 100%;
  box-sizing: border-box;
  left: 0;
  right: 0;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3), 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  transition: background 0.3s ease, backdrop-filter 0.3s ease, box-shadow 0.3s ease, transform 0.3s ease;
}

.category-nav::-webkit-scrollbar {
  display: none;
}

/* 移除category-nav的呼吸灯效果 */
.category-nav::after {
  display: none;
}

/* 固定呼吸灯横线 */
.fixed-breathing-line {
  height: 1rpx;
  margin: 0 0rpx 32rpx;
  background: linear-gradient(90deg, 
    transparent 0%, 
    rgba(123, 97, 255, 0.3) 20%, 
    rgba(123, 97, 255, 0.8) 50%, 
    rgba(123, 97, 255, 0.3) 80%, 
    transparent 100%);
  animation: breathing 5s ease-in-out infinite;
  position: relative;
  z-index: 1;
}

@keyframes breathing {
  0%, 100% {
    opacity: 0.4;
    box-shadow: 0 0 10rpx rgba(123, 97, 255, 0.3);
  }
  50% {
    opacity: 1;
    box-shadow: 0 0 20rpx rgba(123, 97, 255, 0.6);
  }
}

.category-list {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100%;
  padding-right: 16rpx;
}

.category-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 64rpx;
  padding: 0 30rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  background: transparent;
  border: 1px solid transparent;
  position: relative;
  overflow: visible;
}

.category-item:last-child {
  margin-right: 0;
}

.category-item.active {
  background: transparent;
  border-color: transparent;
}

.category-item:active {
  transform: scale(0.95);
}

.category-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
  filter: grayscale(0.3);
  transition: all 0.3s ease;
  object-fit: contain;
}

.category-item.active .category-icon {
  filter: grayscale(0);
}

.category-text {
  font-size: 34rpx;
  color: #888888;
  font-weight: 500;
  transition: all 0.3s ease;
  white-space: nowrap;
  position: relative;
}

.category-item.active .category-text {
  color: #9d84f9;
  font-weight: 600;
}

/* 指示条 */
.category-item::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 4rpx;
  background: #9d84f9;
  border-radius: 2rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 0 10rpx rgba(123, 97, 255, 0.6);
}

.category-item.active::after {
  width: 60rpx;
}

/* 服装列表 */
.cloth-list {
  width: 100%;
}

.category-content {
  width: 100%;
  padding-bottom: 24rpx;
  overflow-y: auto;
  scrollbar-width: none;
  -ms-overflow-style: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  opacity: 1;
  transform: translateY(0);
  position: relative;
}

/* 滑动切换动画 */
.cloth-list {
  position: relative;
  overflow: hidden;
}

/* 边缘高亮提示 */
.edge-hint {
  position: absolute;
  top: 0;
  bottom: 0;
  width: 80rpx;
  pointer-events: none;
  opacity: 0;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 50;
}

.edge-hint.active {
  opacity: 1;
}

.left-edge {
  left: 0;
  background: linear-gradient(to right, rgba(123, 97, 255, 0.3), rgba(123, 97, 255, 0));
}

.right-edge {
  right: 0;
  background: linear-gradient(to left, rgba(123, 97, 255, 0.3), rgba(123, 97, 255, 0));
}

/* 导航栏切换动画 */
.category-item {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 分类内容切换动画 */
.category-content {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.category-content::-webkit-scrollbar {
  display: none;
}

/* 瀑布流网格 */
.waterfall-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  padding: 0 32rpx;
}

/* 吸顶状态下的网格容器 */
.cloth-list.is-sticky .category-content {
  min-height: calc(100vh - 100rpx) !important;
  transition: min-height 0.3s ease;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .waterfall-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 16rpx;
    padding: 0 24rpx;
  }
  
  .category-item {
    padding: 0 24rpx;
    margin-right: 12rpx;
  }
  
  .category-icon {
    width: 32rpx;
    height: 32rpx;
  }
  
  .category-text {
    font-size: 24rpx;
  }
  
  .cloth-list.is-sticky .category-content {
    min-height: calc(100vh - 100rpx) !important;
  }
}

@media (min-width: 768px) {
  .waterfall-grid {
    grid-template-columns: repeat(4, 1fr);
    gap: 24rpx;
    padding: 0 32rpx;
  }
  
  .category-item {
    padding: 0 40rpx;
    margin-right: 20rpx;
  }
  
  .category-icon {
    width: 48rpx;
    height: 48rpx;
  }
  
  .category-text {
    font-size: 32rpx;
  }
  
  .cloth-list.is-sticky .category-content {
    min-height: calc(100vh - 100rpx) !important;
  }
}

/* 衣物卡片 */
.cloth-item {
  position: relative;
  aspect-ratio: 3/4;
  background: rgba(91, 19, 236, 0.2);
  border-radius: 32rpx;
  overflow: hidden;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
}

.cloth-item:active {
  transform: scale(0.98);
  border-color: rgba(168, 85, 247, 0.5);
}

.cloth-item.selected {
  border-color: #7B61FF;
  box-shadow: 0 0 20rpx rgba(123, 97, 255, 0.4);
  background: rgba(123, 97, 255, 0.1);
}

.cloth-image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  object-fit: cover;
  border-radius: 32rpx;
}

.cloth-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 48rpx 24rpx 24rpx;
  background: linear-gradient(to top, #0f0a1e 0%, rgba(15, 10, 30, 0.6) 60%, transparent 100%);
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.cloth-category {
  font-size: 18rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.5);
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.cloth-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
  padding: 0;
  background: transparent;
  text-align: left;
}

/* 添加衣物卡片 */
.add-cloth-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  aspect-ratio: 3/4;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 32rpx;
  border: 2rpx dashed rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.add-cloth-item:active {
  background: rgba(168, 85, 247, 0.1);
  border-color: rgba(168, 85, 247, 0.5);
  transform: scale(0.98);
}

.add-cloth-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 18rpx;
}

.add-cloth-text {
  font-size: 24rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.5);
}

/* 选中状态的小紫点 */
.category-dot {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 12rpx;
  height: 12rpx;
  background: #7B61FF;
  border-radius: 50%;
  box-shadow: 0 0 10rpx rgba(123, 97, 255, 0.6);
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.2);
    opacity: 0.8;
  }
}

/* 加载状态样式 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 16rpx;
  margin: 24rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.1);
  border-left-color: #7B61FF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 100rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.4);
}

/* 试衣效果展示 */
.result-section {
  margin-bottom: 20rpx;
}

.section-header {
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: white;
}

.result-area {
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.result-image {
  width: 100%;
  max-height: 500rpx;
  object-fit: contain;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.result-actions {
  display: flex;
  gap: 16rpx;
  width: 100%;
}

.result-btn {
  flex: 1;
  background: linear-gradient(135deg, #5b13ec 0%, #4a0fd8 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(91, 19, 236, 0.3);
}

/* 错误提示 */
.error {
  background: rgba(255, 77, 79, 0.1);
  border: 2rpx solid rgba(255, 77, 79, 0.3);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  backdrop-filter: blur(10px);
}

.error-text {
  font-size: 24rpx;
  color: rgba(255, 77, 79, 0.9);
  margin-bottom: 16rpx;
  text-align: center;
}

.error-btn {
  background: linear-gradient(135deg, #5b13ec 0%, #4a0fd8 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx 48rpx;
  font-size: 22rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(91, 19, 236, 0.3);
}

/* 引导浮层样式 */
.guide-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index: 9999;
  display: flex;
  justify-content: center;
  padding: 50rpx;
}

.guide-content {
  width: 85vw;
  background: linear-gradient(135deg, #1A1A1E 0%, #121212 100%);
  border-radius: 24px;
  border: 1px solid rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(15px);
  max-height: 73vh;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.5);
}

.guide-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx 0;
  margin-bottom: 24rpx;
}

.guide-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

.guide-close {
  font-size: 40rpx;
  color: rgba(255, 255, 255, 0.6);
  cursor: pointer;
  padding: 8rpx;
}

.guide-close:hover {
  color: rgba(255, 255, 255, 0.8);
}

.guide-body {
  padding: 0 32rpx 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.guide-example {
  margin-bottom: 32rpx;
  text-align: center;
  overflow: hidden;
  border-radius: 16rpx;
}

.photo-container {
  position: relative;
  width: 100%;
  height: 700rpx;
  margin: 0 auto;
  box-shadow: 0 0 15px rgba(123, 97, 255, 0.3);
  border-radius: 16rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.05);
}

.example-image {
  width: 100%;
  height: 700rpx;
  object-fit: cover;
  display: block;
  margin: 0 auto;
  background-color: rgba(255, 255, 255, 0.1);
}

.image-loading {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.05);
}

.image-loading text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.floating-requirements {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  z-index: 10;
}

.floating-requirement-item {
  background: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.requirement-check-icon {
  width: 18px;
  height: 18px;
  flex-shrink: 0;
  object-fit: contain;
}

.floating-requirement-text {
  display: block;
  line-height: 1.2;
}

.guide-footer {
  padding: 0 32rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.action-area {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkbox-wrapper {
  display: flex;
  align-items: center;
  cursor: pointer;
  gap: 8rpx;
}

.checkbox-icon {
  width: 20rpx;
  height: 20rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.05);
  transition: all 0.3s ease;
}

.checkbox-icon.checked {
  background: var(--primary);
  border-color: var(--primary);
}

.checkbox-check {
  color: white;
  font-size: 22rpx;
  font-weight: bold;
}

.checkbox-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  font-weight: 400;
}

.guide-btn {
  width: 100%;
  height: 48px;
  border-radius: 12px;
  background: #4a0fd8;
  color: white;
  border: none;
  padding: 24rpx;
  font-size: 30rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
  box-shadow: 0 4rpx 16rpx rgba(91, 19, 236, 0.3);
  transition: all 0.3s ease;
}

/* 悬浮操作按钮 */
.floating-action {
  position: fixed;
  bottom: 30%;
  left: 50%;
  transform: translateX(-50%);
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
  padding: 0 20rpx;
}

.start-tryon-btn {
  width: 85% !important;
  height: 90rpx;
  margin-top: 32rpx;
  margin-bottom: 32rpx;
  border-radius: 25rpx;
  background: linear-gradient(135deg, #5b13ec 0%, #8c52ff 100%);
  color: white;
  border: none;
  font-size: 32rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
  box-shadow: 0 0 20rpx rgba(91, 19, 236, 0.4);
  transition: all 0.3s ease;
  backdrop-filter: blur(15px);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 2rpx;
}

.start-tryon-btn:disabled {
  opacity: 0.5;
  box-shadow: none;
}

.start-tryon-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(91, 19, 236, 0.4);
}

.btn-icon {
  width: 50rpx;
  height: 50rpx;
  object-fit: contain;
}

