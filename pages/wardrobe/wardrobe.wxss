/* pages/wardrobe/wardrobe.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #0F0F12 0%, #1A1A1E 100%);
  padding: 20rpx;
  padding-bottom: 120rpx;
  box-sizing: border-box;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.header-title {
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 4rpx;
}

.subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
}

.header-action {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #7B61FF 0%, #614DFF 100%);
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(123, 97, 255, 0.3);
  transition: all 0.3s ease;
}

.header-action:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(123, 97, 255, 0.3);
}

.add-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
  object-fit: contain;
}

.add-text {
  font-size: 24rpx;
  font-weight: 500;
}

.search-section {
  margin-bottom: 20rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.search-icon {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 24rpx;
  color: #ffffff;
  height: 100%;
}

.search-placeholder {
  color: rgba(255, 255, 255, 0.3);
}

.clear-icon {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.5);
  padding: 4rpx;
}

.sort-section {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.sort-options {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.sort-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.sort-option {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  background: rgba(255, 255, 255, 0.05);
  transition: all 0.3s ease;
}

.sort-option:active {
  background: rgba(255, 255, 255, 0.1);
}

/* 分割线 - 呼吸流动灯光效果 */
.category-divider {
  height: 2rpx;
  background: linear-gradient(90deg, 
    rgba(0, 0, 0, 0) 0%, 
    rgba(0, 119, 255, 0.8) 25%, 
    rgba(0, 255, 149, 0.8) 50%, 
    rgba(255, 0, 80, 0.8) 75%, 
    rgba(0, 0, 0, 0) 100%);
  margin: 0;
  position: relative;
  overflow: hidden;
}

.category-divider::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, 
    transparent 0%, 
    rgba(255, 255, 255, 0.8) 50%, 
    transparent 100%);
  animation: breatheFlow 5s ease-in-out infinite;
}

@keyframes breatheFlow {
  0% {
    left: -100%;
    opacity: 0;
  }
  50% {
    opacity: 1;
  }
  100% {
    left: 100%;
    opacity: 0;
  }
}

/* 分类导航 */
.category-nav {
  height: 100rpx;
  padding: 0 16rpx;
  margin-bottom: 0;
  background: transparent;
  backdrop-filter: none;
  -webkit-backdrop-filter: none;
  border-radius: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: sticky;
  top: 0;
  z-index: 10;
  width: 100%;
  box-sizing: border-box;
  left: 0;
  right: 0;
  transition: background 0.3s ease, backdrop-filter 0.3s ease, box-shadow 0.3s ease;
}

.category-nav::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 20rpx;
  right: 20rpx;
  height: 1rpx;
  background: linear-gradient(90deg, 
    transparent 0%, 
    rgba(123, 97, 255, 0.3) 20%, 
    rgba(123, 97, 255, 0.8) 50%, 
    rgba(123, 97, 255, 0.3) 80%, 
    transparent 100%);
  animation: breathing 5s ease-in-out infinite;
  z-index: 1;
}

/* 下拉菜单样式 */
.dropdown-container {
  position: relative;
  z-index: 20;
  flex: 1;
  margin-right: 180rpx;
}

.dropdown-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: transparent;
  z-index: 25;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.dropdown-overlay.show {
  opacity: 1;
  pointer-events: auto;
}

.dropdown-button {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  min-height: 64rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.dropdown-button:active {
  background: rgba(255, 255, 255, 0.1);
}

.dropdown-arrow {
  display: flex;
  align-items: center;
  transition: transform 0.3s ease;
  margin-right: 16rpx;
}

.dropdown-arrow.rotate {
  transform: rotate(90deg);
}

.arrow-icon {
  font-size: 20rpx;
  color: #7B61FF;
  font-weight: bold;
}

.selected-category {
  display: flex;
  align-items: center;
  flex: 1;
}

.dropdown-menu {
  position: absolute;
  top: 100%;
  left: 0;
  margin-top: 8rpx;
  background: rgba(15, 15, 18, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 12rpx;
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
  width: 100%;
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease, opacity 0.3s ease;
  opacity: 0;
  z-index: 30;
}

.dropdown-menu.open {
  max-height: 500rpx;
  opacity: 1;
}

.dropdown-item {
  display: flex;
  align-items: center;
  padding: 16rpx 54rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.dropdown-item:last-child {
  border-bottom: none;
}

.dropdown-item:active {
  background: rgba(123, 97, 255, 0.1);
}

.dropdown-item.active {
  background: rgba(123, 97, 255, 0.1);
}

.dropdown-item .category-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

.dropdown-item.active .category-text {
  color: #7B61FF;
  font-weight: 600;
}

/* 右侧添加服装按钮 */
.category-nav .header-action {
  margin: 0;
  white-space: nowrap;
}

@keyframes breathing {
  0%, 100% {
    opacity: 0.4;
    box-shadow: 0 0 10rpx rgba(123, 97, 255, 0.3);
  }
  50% {
    opacity: 1;
    box-shadow: 0 0 20rpx rgba(123, 97, 255, 0.6);
  }
}



/* 加载动画 */
.local-pull-refresh-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
}

.local-pull-refresh-icon .refresh-image {
  width: 60rpx;
  height: 60rpx;
  object-fit: contain;
  display: block;
}

.local-pull-refresh-icon.refreshing .refresh-image {
  animation: spin 1.5s linear infinite;
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* 服装网格 */
.waterfall-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8rpx;
  padding: 8rpx 0 400rpx 0;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}

.cloth-item {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 8px;
  overflow: hidden;
  position: relative;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
  backdrop-filter: blur(10px);
}

.cloth-item:active {
  border-color: #7B61FF;
  box-shadow: 0 0 20rpx rgba(123, 97, 255, 0.4);
  background: rgba(123, 97, 255, 0.1);
}

.cloth-image {
  width: 100%;
  height: 220rpx;
  object-fit: cover;
  display: block;
}

.cloth-name {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.9);
  padding: 8rpx;
  font-weight: 500;
  text-align: center;
  background: rgba(0, 0, 0, 0.3);
}

.cloth-actions {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  z-index: 1;
}

.delete-btn {
  background: rgba(255, 77, 79, 0.9);
  border-radius: 50%;
  padding: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(255, 77, 79, 0.3);
}

.delete-icon {
  font-size: 20rpx;
  color: white;
}

/* 添加服装按钮 */
.add-cloth-item {
  background: rgba(123, 97, 255, 0.1);
  border: 2rpx dashed rgba(123, 97, 255, 0.5);
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 220rpx;
  transition: all 0.3s ease;
}

.add-cloth-item:active {
  background: rgba(123, 97, 255, 0.2);
  border-color: rgba(123, 97, 255, 0.8);
  transform: scale(0.98);
}

.add-cloth-icon {
  font-size: 80rpx;
  font-weight: 300;
  color: #7B61FF;
  line-height: 1;
  margin-bottom: 16rpx;
  text-shadow: 0 0 20rpx rgba(123, 97, 255, 0.4);
}

.add-cloth-text {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.7);
  font-weight: 500;
  text-align: center;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  margin: 24rpx 0;
  grid-column: 1 / -1;
}

.empty-state .empty-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
  filter: grayscale(0.3);
}

.empty-state .empty-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 12rpx;
  margin: 24rpx 0;
  grid-column: 1 / -1;
}

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 12rpx;
  margin: 24rpx 0;
  grid-column: 1 / -1;
}

.loading-more {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

/* 加载更多 */
.load-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.load-text {
  font-size: 24rpx;
  color: #7B61FF;
  padding: 12rpx 30rpx;
  border: 2rpx solid #7B61FF;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.load-text:active {
  background: #7B61FF;
  color: white;
}

/* 加载中 */
.loading-more {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

/* 错误提示 */
.error-section {
  background: rgba(255, 77, 79, 0.1);
  border: 2rpx solid rgba(255, 77, 79, 0.3);
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  backdrop-filter: blur(10px);
}

.error-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.error-text {
  font-size: 24rpx;
  color: rgba(255, 77, 79, 0.9);
  margin-bottom: 16rpx;
  text-align: center;
}

.retry-btn {
  background: linear-gradient(135deg, #7B61FF 0%, #614DFF 100%);
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 30rpx;
  font-size: 22rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(123, 97, 255, 0.3);
}

/* 刷新按钮 */
.refresh-btn {
  background: rgba(255, 255, 255, 0.05);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  padding: 16rpx;
  text-align: center;
  margin-top: 20rpx;
  color: rgba(255, 255, 255, 0.7);
  font-size: 24rpx;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
}

.refresh-btn:active {
  background: rgba(255, 255, 255, 0.1);
  border-color: #7B61FF;
  color: #7B61FF;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .waterfall-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .header {
    flex-direction: column;
    align-items: flex-start;
    gap: 12rpx;
  }
  
  .header-action {
    align-self: flex-end;
  }
  
  .category-item {
    padding: 0 24rpx;
    height: 56rpx;
  }
  
  .category-icon {
    font-size: 24rpx;
    margin-right: 6rpx;
  }
  
  .category-text {
    font-size: 24rpx;
  }
  
  .category-nav {
    height: 80rpx;
    padding: 0 12rpx;
  }
  
  .category-list {
    padding-right: 12rpx;
  }
  
  .cloth-image {
    height: 200rpx;
  }
}

@media (min-width: 768px) {
  .waterfall-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 20rpx;
  }
  
  .cloth-image {
    height: 350rpx;
  }
  
  .category-item {
    padding: 0 32rpx;
    height: 64rpx;
  }
  
  .category-icon {
    font-size: 28rpx;
    margin-right: 8rpx;
  }
  
  .category-text {
    font-size: 28rpx;
  }
  
  .category-nav {
    height: 100rpx;
    padding: 0 24rpx;
  }
  
  .category-list {
    padding-right: 24rpx;
  }
}

/* 动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.cloth-item {
  animation: fadeInUp 0.6s ease-out;
}

.cloth-item:nth-child(1) {
  animation-delay: 0.1s;
}

.cloth-item:nth-child(2) {
  animation-delay: 0.2s;
}

.cloth-item:nth-child(3) {
  animation-delay: 0.3s;
}

.cloth-item:nth-child(4) {
  animation-delay: 0.4s;
}
