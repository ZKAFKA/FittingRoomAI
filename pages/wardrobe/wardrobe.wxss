/* 页面基础样式 */
.page {
  min-height: 100vh;
  background: #0f0a1e;
  padding-bottom: 200rpx;
}

/* 头部 */
.header {
  position: sticky;
  top: 0;
  z-index: 50;
  background: rgba(15, 10, 30, 0.9);
  backdrop-filter: blur(20px);
  padding: 32rpx 32rpx 0rpx 32rpx;
  overflow: hidden;
}

.header-content {
  position: relative;
  z-index: 1;
}

.header-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

/* 呼吸光特效 */
.header-glow {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, #8b5cf6, transparent);
  animation: headerGlow 2s ease-in-out infinite;
}

@keyframes headerGlow {
  0%, 100% {
    opacity: 0.3;
    transform: scaleX(0.5);
    transform-origin: center;
  }
  50% {
    opacity: 1;
    transform: scaleX(1);
    transform-origin: center;
  }
}

.page-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #ffffff;
  letter-spacing: 1rpx;
}

.header-right {
  display: flex;
  gap: 8rpx;
}

.header-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: background 0.2s;
}

.header-btn:active {
  background: rgba(255, 255, 255, 0.1);
}

.btn-icon {
  width: 36rpx;
  height: 36rpx;
}

/* 搜索栏 */
.search-bar {
  max-height: 0;
  overflow: hidden;
  transition: all 0.3s ease;
}

.search-bar.show {
  max-height: 120rpx;
  margin-bottom: 24rpx;
}

.search-input-wrap {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  padding: 0 24rpx;
  height: 80rpx;
}

.search-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 16rpx;
  opacity: 0.5;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #ffffff;
  height: 100%;
}

.search-placeholder {
  color: rgba(255, 255, 255, 0.3);
}

.search-clear {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.5);
  padding: 8rpx;
}

/* 分类标签滚动 */
.category-scroll {
  display: flex;
  white-space: nowrap;
  margin-top: 24rpx;
}

.category-scroll::-webkit-scrollbar {
  display: none;
}

.category-chip {
  display: inline-flex;
  padding: 12rpx 32rpx;
  height: 50rpx;
  margin-right: 16rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.6);
  background: rgba(255, 255, 255, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  flex-shrink: 0;
  transition: all 0.25s ease;
  align-items: center;
}

.category-chip:active {
  transform: scale(0.95);
}

.category-chip.active {
  background: #8b5cf6;
  color: #ffffff;
  border-color: #8b5cf6;
  box-shadow: 0 8rpx 24rpx rgba(139, 92, 246, 0.3);
}

/* 服装网格 */
.clothes-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 0 32rpx;
}

.cloth-card {
  position: relative;
  aspect-ratio: 3/4;
  background: #1a152e;
  border-radius: 32rpx;
  overflow: hidden;
  border: 1rpx solid rgba(255, 255, 255, 0.05);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

.cloth-card:active {
  transform: scale(0.98);
  border-color: rgba(168, 85, 247, 0.5);
}

.cloth-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.cloth-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 48rpx 24rpx 24rpx;
  background: linear-gradient(to top, #0f0a1e 0%, rgba(15, 10, 30, 0.6) 60%, transparent 100%);
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.cloth-category {
  font-size: 18rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.5);
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.cloth-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
}

.cloth-delete {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 56rpx;
  height: 56rpx;
  background: rgba(255, 77, 79, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.2s;
}

.cloth-card:active .cloth-delete {
  opacity: 1;
}

.delete-icon {
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.3);
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid rgba(168, 85, 247, 0.2);
  border-top-color: #a855f7;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* 悬浮按钮 */
.fab-container {
  position: fixed;
  bottom: 120rpx;
  right: 32rpx;
  z-index: 60;
  display: flex;
  align-items: center;
  justify-content: center;
}

.fab-btn {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #8b5cf6, #a78bfa);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(12px);
  box-shadow: 0 0 60rpx 10rpx rgba(139, 92, 246, 0.4),
              inset 0 0 24rpx rgba(255, 255, 255, 0.2);
  transition: transform 0.2s;
}

.fab-btn:active {
  transform: scale(0.9);
}

.fab-glow {
  position: absolute;
  inset: -30rpx;
  border-radius: 50%;
  background: rgba(139, 92, 246, 0.3);
  filter: blur(40rpx);
  z-index: -1;
}

.fab-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 弹窗遮罩 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.modal-overlay.show {
  opacity: 1;
  pointer-events: auto;
}

.modal-backdrop {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(12px);
}

/* 弹窗内容 */
.modal-content {
  position: relative;
  width: 90%;
  max-width: 680rpx;
  max-height: 85vh;
  background: #1a152e;
  border-radius: 32rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.05);
  box-shadow: 0 40rpx 100rpx rgba(168, 85, 247, 0.15);
  overflow: hidden;
  transform: translateY(40rpx) scale(0.95);
  transition: transform 0.3s ease;
}

.modal-overlay.show .modal-content {
  transform: translateY(0) scale(1);
}

.modal-header {
  padding: 48rpx 40rpx 24rpx;
  text-align: center;
}

.modal-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.modal-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
}

.modal-body {
  padding: 0 40rpx;
  max-height: 50vh;
  overflow-y: auto;
}

/* 上传区域 */
.upload-section {
  margin-bottom: 32rpx;
}

.upload-area {
  height: 280rpx;
  background: rgba(0, 0, 0, 0.3);
  border: 2rpx dashed rgba(168, 85, 247, 0.5);
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.upload-area:active {
  background: rgba(168, 85, 247, 0.1);
  border-color: #a855f7;
}

.upload-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.upload-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
}

.preview-area {
  position: relative;
  height: 280rpx;
  border-radius: 24rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.preview-change {
  position: absolute;
  bottom: 16rpx;
  right: 16rpx;
  width: 64rpx;
  height: 64rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.change-icon {
  font-size: 32rpx;
}

/* 表单组 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 22rpx;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.6);
  text-transform: uppercase;
  letter-spacing: 4rpx;
  margin-bottom: 16rpx;
}

/* 类型选择器 */
.type-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.type-option {
  padding: 16rpx 24rpx;
  background: rgba(0, 0, 0, 0.3);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.6);
  transition: all 0.2s;
}

.type-option:active {
  transform: scale(0.95);
}

.type-option.active {
  background: #8b5cf6;
  color: #ffffff;
  border-color: #8b5cf6;
}

/* 标签输入 */
.tag-input-wrap {
  background: rgba(0, 0, 0, 0.3);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 0 24rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
}

.tag-input {
  flex: 1;
  font-size: 28rpx;
  color: #ffffff;
  height: 100%;
}

.tag-placeholder {
  color: rgba(255, 255, 255, 0.3);
}

.tag-preview {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 16rpx;
}

.tag-item {
  padding: 8rpx 20rpx;
  background: rgba(168, 85, 247, 0.2);
  border-radius: 20rpx;
}

.tag-text {
  font-size: 22rpx;
  color: #a855f7;
}

/* 弹窗底部按钮 */
.modal-footer {
  padding: 24rpx 40rpx 48rpx;
}

.btn-confirm {
  width: 100%;
  height: 96rpx;
  background: #8b5cf6;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 700;
  color: #ffffff;
  box-shadow: 0 12rpx 32rpx rgba(139, 92, 246, 0.3);
  transition: all 0.2s;
}

.btn-confirm:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.btn-cancel {
  width: 100%;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.5);
  margin-top: 12rpx;
}

.btn-cancel:active {
  color: #ffffff;
}
